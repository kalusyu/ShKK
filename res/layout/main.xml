<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing_chun"
    android:gravity="center_horizontal" >
    
    <include 
        android:id="@+id/main_ui_layout"
        layout="@layout/main_ui_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <include 
        android:layout_centerHorizontal="true"
        android:id="@+id/wendu_ui_layout"
        android:layout_below="@id/main_ui_layout"
        layout="@layout/wendu_ui_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <include 
        android:layout_marginTop="20dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/liuliang_ui_layout"
        android:layout_below="@id/wendu_ui_layout"
        layout="@layout/liuliang_ui_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:clickable="true"
            android:src="@drawable/fanhui_btn">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/baocun_btn">
        </ImageView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:gravity="center_vertical"
        android:layout_above="@id/bottom_ll"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" 
            android:clickable="true"
            android:src="@drawable/dengguan_btn">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:src="@drawable/yinyue_btn">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" 
            android:clickable="true"
            android:src="@drawable/lanya_btn">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.45"
            android:clickable="true"
            android:text="21:30"
            android:gravity="center"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/time_color">
        </TextView>
    </LinearLayout>

</RelativeLayout>