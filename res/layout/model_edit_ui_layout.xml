<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xinxibianji_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dip"
            android:layout_marginLeft="5dip"
            android:textColor="#161616"
            android:drawableRight="@drawable/heidian_normal"
            android:text="名称" />

        <EditText
            android:id="@+id/model_edit_name"
            android:layout_marginLeft="5dip"
            android:layout_width="95dip"
            android:layout_height="wrap_content"
            android:background="@drawable/bianjikuang_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38px"
        android:layout_marginTop="38px"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:drawablePadding="5dip"
            android:textColor="#161616"
            android:drawableRight="@drawable/heidian_normal"
            android:text="性別" />

        <RadioGroup
            android:id="@+id/model_edit_rg"
            android:layout_marginLeft="5dip"
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/model_edit_rb_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男"
                android:textColor="#161616"
                android:button="@drawable/radio_btn" />

            <RadioButton
                android:id="@+id/model_edit_rb_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女"
                android:textColor="#161616"
                android:button="@drawable/radio_btn" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="cancel"
            android:src="@drawable/cancel_btn" />
        
        <ImageView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="ok"
            android:src="@drawable/ok_btn" />

        
    </LinearLayout>

</LinearLayout>