<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/flow_reduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="flowReduce"
        android:src="@drawable/liuliang_r_btn" >
    </ImageView>

    <!-- android:layout_width="198.5dip" -->

    <RelativeLayout
        android:layout_width="447px"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/flow_scroll_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="fitStart"
            android:src="@drawable/liuliangtiao2_chun_normal" >
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-66px"
            android:layout_toRightOf="@id/flow_scroll_bar"
            android:clickable="true"
            android:src="@drawable/liulianganniu_normal" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/flow_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-60px"
        android:clickable="true"
        android:onClick="flowPlus"
        android:src="@drawable/liuliang_p_btn" >
    </ImageView>

</LinearLayout>